<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_weight="1"
        android:background="@drawable/cart_use"
        android:layout_width="@dimen/list_image_width"
        android:layout_height="@dimen/list_image_height" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item"
            android:text="@string/item_filler"
            android:gravity="center"
            android:layout_marginTop="@dimen/food_item_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:gravity="center"
            android:layout_marginTop="@dimen/swipe_text_margin"
            android:text="@string/swipe_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>